files:
  "/etc/cron.d/reset_trains":
    mode: "000644"
    owner: root
    group: root
    content: |
      0 1 * * * root python /var/app/current/reset_trains.py >> /var/log/reset_trains.log 2>&1

commands:
  01_remove_old_cron:
    command: "rm -f /etc/cron.d/reset_trains.bak"
  02_start_crond:
    command: "service crond restart || service cron restart"